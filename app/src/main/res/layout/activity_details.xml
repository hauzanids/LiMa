<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        android:background="@android:color/white"/>

    <View
        android:id="@+id/rectangle2"
        android:layout_width="match_parent"
        android:layout_height="255.92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-100dp"
        android:background="@drawable/rectangle2"
        />

    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="251.14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-100dp"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/rectangle2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="168dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:layout_marginBottom="85dp"
        android:text="Absensi"
        android:textSize="20sp" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/max" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rectangle"
        android:layout_alignLeft="@+id/rectangle"
        android:layout_alignTop="@+id/rectangle"
        android:layout_alignEnd="@+id/rectangle"
        android:layout_alignRight="@+id/rectangle"
        android:layout_alignBottom="@+id/rectangle"
        android:layout_marginBottom="70dp"
        android:text="Kelompok Nilai Tertinggi"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rectangle"
        android:layout_alignLeft="@+id/rectangle"
        android:layout_alignTop="@+id/rectangle"
        android:layout_alignEnd="@+id/rectangle"
        android:layout_alignRight="@+id/rectangle"
        android:layout_alignBottom="@+id/rectangle"
        android:layout_marginTop="48dp"
        android:text="Kelompok 2"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold" />

</RelativeLayout>